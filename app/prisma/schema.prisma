model Case {
  case_number  Int        @id
  created_at   DateTime   @default(now())
  expired_at   DateTime?
  uuid         String     
  status       CaseStatus
}

model UserCase {
  id                Int       @id @default(autoincrement())
  case_number       Int
  user_id           Int       @default(autoincrement()) 
  expired_at        DateTime?
  proofing_agent_id String  
}

model ProofingAgent {
  user_id           Int       @id @default(autoincrement())
  logingov_id       Int
  role              String  
  x_509             Json?
}

enum CaseStatus {
  EXPIRED
  SITE_CONFIRMED
  INPERSON_PROOFED
  UNCONFIRMED
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
